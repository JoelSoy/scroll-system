{
  "name": "scroll-system",
  "version": "1.0.1",
  "description": "TikTok-style vertical scroll system with snap views, touch physics, and accessibility features",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "keywords": [
    "scroll",
    "snap",
    "tiktok",
    "react",
    "navigation",
    "touch",
    "swipe",
    "accessibility",
    "a11y"
  ],
  "author": "Joel Starck",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoelSoy/scroll-system.git"
  },
  "homepage": "https://github.com/JoelSoy/scroll-system#readme",
  "bugs": {
    "url": "https://github.com/JoelSoy/scroll-system/issues"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "zustand": ">=4.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "jsdom": "^24.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
